<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="32" height="32">
  <defs>
    <style>
      .bg-circle { fill: rgba(255,255,255,0.2); } /* Fondo translúcido para el sidebar */
      .text-light {
        font-family: 'Segoe UI', system-ui, sans-serif;
        font-weight: bold;
        fill: #FFFFFF; /* var(--color-texto-claro) */
        font-size: 40px; /* Más grande para que "TT" sea legible en 32x32 */
        letter-spacing: -2px;
      }
       .highlight { fill: #E0F2FE; } /* var(--color-primario) - para un pequeño detalle */
    </style>
  </defs>
  <circle cx="50" cy="50" r="48" class="bg-circle"/>
  <circle cx="35" cy="35" r="10" class="highlight" opacity="0.5"/>
  <text x="50" y="65" text-anchor="middle" class="text-light">TT</text>
</svg>
